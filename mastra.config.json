{
  "name": "youtube-transcript-agent",
  "version": "1.0.0",
  "description": "AI-powered YouTube playlist transcript search agent",
  "runtime": "nodejs20",
  "entry": "src/mastra/index.ts",
  "environment": {
    "NODE_ENV": "production",
    "MASTRA_DEPLOYMENT": "true"
  },
  "env": [
    "YOUTUBE_API_KEY",
    "OPENAI_API_KEY"
  ],
  "build": {
    "include": [
      "src/**/*.ts",
      "src/**/*.js",
      "data/**",
      "package.json",
      "tsconfig.json"
    ],
    "exclude": [
      "node_modules",
      ".git",
      "*.log",
      "*.md",
      "deployment/**"
    ]
  },
  "endpoints": [
    {
      "path": "/health",
      "method": "GET",
      "description": "Health check endpoint"
    },
    {
      "path": "/search",
      "method": "POST",
      "description": "Search playlist transcripts",
      "parameters": {
        "query": "string",
        "playlistUrl": "string",
        "options": "object"
      }
    },
    {
      "path": "/process-playlist",
      "method": "POST", 
      "description": "Process YouTube playlist",
      "parameters": {
        "playlistUrl": "string",
        "options": "object"
      }
    },
    {
      "path": "/stats",
      "method": "GET",
      "description": "Get database statistics"
    }
  ],
  "resources": {
    "memory": "512MB",
    "cpu": "0.5",
    "storage": "1GB"
  },
  "networking": {
    "allowExternalConnections": true,
    "ngrokTunnel": true
  },
  "database": {
    "type": "sqlite",
    "path": "./data/transcript_vectors.db",
    "backupEnabled": true,
    "tunnelEnabled": true
  }
}
