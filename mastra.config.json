{
  "name": "youtube-transcript-agent",
  "version": "1.0.0",
  "description": "AI-powered YouTube playlist transcript search agent",
  "runtime": "nodejs20",
  "entrypoint": "src/mastra/index.ts",
  "environment": {
    "NODE_ENV": "production",
    "MASTRA_DEPLOYMENT": "true"
  },
  "memory": {
    "provider": "local"
  },
  "secrets": [
    "YOUTUBE_API_KEY",
    "OPENAI_API_KEY",
    "DATABASE_FILE_URL",
    "DATABASE_URL",
    "DATABASE_API_KEY",
    "CHROMA_CLOUD_API_KEY",
    "CHROMA_TENANT",
    "CHROMA_DATABASE"
  ]
}
